{
  "compilerOptions": {
    "baseUrl": "./",
    "jsx": "react-jsx",
    "esModuleInterop": true,
    "paths": {
      "@/*": ["src/*"],
      "@app/*": ["./app/*"],
      "@entities/*": ["src/entities/*"],
      "@features/*": ["src/features/*"],
      "@pages/*": ["src/pages/*"],
      "@shared/*": ["src/shared/*"],
      "@widgets/*": ["src/widgets/*"]
    }
  }
}
